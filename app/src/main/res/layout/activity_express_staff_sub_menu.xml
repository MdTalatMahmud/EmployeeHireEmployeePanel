<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/signupbackground"
    tools:context=".ExpressStaffSubMenuActivity">

    <Button
        android:id="@+id/myAvailabilityButtonID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="My Availability"/>
    <Button
        android:id="@+id/myRosterButtonID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="My Roster"/>
    <Button
        android:id="@+id/myInquiryButtonID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="My Inquiry"/>

</LinearLayout>