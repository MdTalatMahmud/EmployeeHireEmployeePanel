<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".SetMyContactDetailsActivity">

<!--    staff name-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Name: "/>
        <EditText
            android:id="@+id/staffNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="David Cris"/>
    </LinearLayout>

<!--    contact number-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Contact Number: "/>
        <EditText
            android:id="@+id/contactNumberID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="David Cris"/>
    </LinearLayout>

    <!--    email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Email: "/>
        <EditText
            android:id="@+id/applicantEmailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="David Cris"/>
    </LinearLayout>

    <!--    email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Experience: "/>
        <EditText
            android:id="@+id/applicantExperienceID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1 year experience of Forklifting. 2 year experience of Truck driving."/>
    </LinearLayout>

    <!--    License-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="License: "/>
        <EditText
            android:id="@+id/applicantLicenseID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="(1) White card, (2)Driving License"/>
    </LinearLayout>

    <Button
        android:id="@+id/saveApplicantDetailsBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Save"/>



</LinearLayout>